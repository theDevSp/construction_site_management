<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='emplacement_action' model='ir.actions.act_window'>
        <field name="name">Construction Site Management - Equipes</field>
        <field name="res_model">fleet.vehicle.chantier.emplacement</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="emplacement_view_form" model="ir.ui.view">
        <field name="name">Form Equipe</field>
        <field name="model">fleet.vehicle.chantier.emplacement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <div class="card border-dark mb-3 bg-light" style="max-width: 30em;text-align:left;">
                            <div class="card-body text-dark">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="name" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-comment form-control-icon"></span>
                                                <field name="name" class="form-control"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="chantier_ids" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-city form-control-icon"></span>
                                                <field name="chantier_ids" class="form-control" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </center>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="emplacement_tree" model="ir.ui.view">
        <field name="name">Liste des Equipes</field>
        <field name="model">fleet.vehicle.chantier.emplacement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="chantier_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="emplacement_search" model="ir.ui.view">
        <field name="name">Recherche Equipes</field>
        <field name="model">fleet.vehicle.chantier.emplacement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="chantier_ids" widget="many2many_tags" />
            </search>
        </field>
    </record>
</odoo>