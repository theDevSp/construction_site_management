<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='chantier_action' model='ir.actions.act_window'>
        <field name="name">Construction Site Management - Chantier</field>
        <field name="res_model">fleet.vehicle.chantier</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="sequence_code_increment" model="ir.sequence">
        <field name="name">Code Number Sequence</field>
        <field name="code">fleet.vehicle.chantier.sequence</field>
        <field name="active">TRUE</field>
        <field name="prefix">TSK</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
        <field name="padding">3</field>
        <field name="implementation">standard</field>
    </record>

    <record id="chantier_view_form" model="ir.ui.view">
        <field name="name">Fleet Chantier Form</field>
        <field name="model">fleet.vehicle.chantier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="ville"/>
                            <field name="active"/>
                            <field name="digital"/>
                            <field name="type_chantier"/>
                            <field name="emplacement_ids" widget="many2many_tags" />
                        </group>
                       
                        <group>
                            <field name="chantier_parent_id"/> 
                            <field name="chantier_ids"/>
                            <field name="location_id"/>
                        </group>
                        
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="chantier_tree" model="ir.ui.view">
        <field name="name">Fleet vehicle chantier Liste</field>
        <field name="model">fleet.vehicle.chantier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="ville"/>
                <field name="type_chantier"/>
            </tree>
        </field>
    </record>

    <record id="chantier_search" model="ir.ui.view">
        <field name="name">Fleet Vehicle Chantier Recherche</field>
        <field name="model">fleet.vehicle.chantier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="ville"/>
                <field name="type_chantier"/>
                <!--
                <filter string="Sans Chauffeurs"
                        name="without_driver"
                        domain="[('chauffeur_ids','=',False)]"/>
                -->
            </search>
        </field>
    </record>
</odoo>